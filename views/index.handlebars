<div class="container-fluid">
	<div class="jumbotron">
		<h1>Eat da Burger!</h1>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-6">
			<div class="well well1">
				<h2 class="text-center">Burgers to be et</h2
				<ul class="list-group">
				{{#each burgers}}
					{{#unless this.devoured}}
						<li class="list-group-item list-group-item-warning">{{this.burger_name}}
						<button class="btn btn-danger devour-burger" data-id="{{id}}">Devour!</button></li>
					{{/unless}}
				{{/each}}
				</ul>
			</div>
		</div>
		<div class="col-md-6">
			<div class="well well2">
				<h2 class="text-center white">Burgers in my Belly</h2>
				<ul class="list-group">
					{{#each burgers}}
						{{#if devoured}}
							<li class="list-group-item list-group-item-warning">{{burger_name}}
							<button class="btn btn-warning poop-burger black" data-id="{{this.id}}">Poop Out da Burger!</button></li>
						{{/if}}
					{{/each}}
				</ul>
			</div>
		</div>
	</div
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<h2 class="text-center">Enter a burger to eat</h2>
			<form class="create-form">
				<div class="text-center">
				<label for="burg">Burger Name:</label>
				<input type="text" id="burg"  name="name">
 				<button class="btn btn-warning black" type="submit">Submit</button>
 				</div>
			</form>
		</div>
	</div>

</div>


